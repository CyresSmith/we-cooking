{
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "react/*",
        "next/*",
        "<THIRD_PARTY_MODULES>",
        "^./(.*)$",
        "^../(.*)$",
        "@ui",
        "@components",
        "@assets/*",
        "@fonts",
        "@routes",
        "@types",
        "@constants",
        "@schemas",
        "@hooks",
        "@selectors",
        "@utils",
        "@prisma",
        "@auth",
        "@actions",
        "@queries",
        "@mutations"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": false,
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "endOfLine": "auto"
}
