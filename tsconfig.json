{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2023"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "declaration": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@ui/*": [
        "./components/ui/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@constants": [
        "./lib/constants"
      ],
      "@fonts": [
        "lib/fonts.ts"
      ],
      "@hooks": [
        "./lib/hooks"
      ],
      "@lib": [
        "./lib"
      ],
      "@selectors": [
        "./lib/selectors"
      ],
      "@prisma": [
        "./prisma"
      ],
      "@routes": [
        "./lib/routes"
      ],
      "@schemas": [
        "./lib/schemas"
      ],
      "@types": [
        "./lib/types"
      ],
      "@utils": [
        "./lib/utils"
      ],
      "@queries": [
        "./queries"
      ],
      "@mutations": [
        "./mutations"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "--eslint.config.mjs",
    ".next/types/app/[locale]/sign-in/page.tsx",
    ".next/types/app/[locale]/page.tsx",
    ".next/types/app/[locale]/layout.tsx",
    ".next/types/app/[locale]/(auth)/sign-in/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}